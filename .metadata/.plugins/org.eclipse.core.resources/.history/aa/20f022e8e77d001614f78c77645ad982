package juegoTest;
import org.junit.Test;

import juego.Batallon;
import juego.BatallonHumano;
import juego.BatallonOrco;
import junit.framework.Assert;


public class BatallonTest {
	@Test
	public void batallaGanaHumano(){
		Batallon bHumano = new BatallonHumano(15);
		Batallon bOrco = new BatallonOrco(10);
		int i = 0; 
		String ganador = "";
		boolean fin = false;
		System.out.println("¡Empieza la batalla!");
		while( !fin ){
				bHumano.atacar(bOrco);
				bOrco.atacar(bHumano);
				System.out.println("round"+i);
			if( bHumano.isEmpty()   ){
				fin = true;
				ganador = "Alianza";
			}
			if( bOrco.isEmpty() ){
				fin = true;
				ganador = "HORDA";
				i++;
			}
		}
		System.out.println("El ganador es:"+ganador);
	}
}
