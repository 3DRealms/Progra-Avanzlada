package juegoTest;
import org.junit.Test;

import juego.Batallon;
import juego.BatallonHumano;
import juego.BatallonOrco;
import junit.framework.Assert;


public class BatallonTest {
	@Test
	public void batallaGanaHumano(){
		Batallon bOrco = new BatallonOrco(10);
		Batallon bHumano = new BatallonHumano(15);
		
		String ganador = "";
		boolean fin = false;
		while( !fin){
			
				bHumano.atacar(bOrco);
				bOrco.atacar(bHumano);
			
			if( bHumano.isEmpty()   ){
				fin = true;
				ganador = "Alianza";
			}
			if( bOrco.isEmpty() ){
				fin = true;
				ganador = "HORDA";
			}
		}
	}
}
